        <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputTitle">Title</label>
              <input name="title" type="text" class="form-control" id="inputTitle" placeholder="Title" required>
            </div>
        </div>
        
          
        <div class="form-group col-md-6">
            <label for="exampleFormControlTextarea1">Article</label>
            <textarea name="body" class="form-control" id="exampleFormControlTextarea1" rows="3" required></textarea>
          </div>  
          <div class="row" style="margin-top: 20px;">

            <div class="col" >
                <button type="submit" class="btn btn-primary">Compose</button>
        
               </div>
          </div>  
       
     
        
      </form>
</body>
